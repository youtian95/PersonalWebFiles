<!-- 一般文章模板 -->

<!DOCTYPE html>
<html>
<head>
    <title><%- page.title %></title>
    <meta charset="utf-8">

    <!-- 引入配置文件 -->
    <%- css('css/main.css') %>
    
</head>
<body>

    <div>

        <!-- 引入导航 -->
        <nav>
			<%- partial('partial/nav.ejs') %>
		</nav>

        <!-- 引入目录 -->
        <aside>
            <%- partial('partial/aside.ejs', {post: page}) %>
        </aside>

        <!-- 正文 -->
        <div id="content">
			<%- page.content %>
        </div>

        <!-- 引入footer -->
		<footer>
			<%- partial('partial/footer.ejs') %>
		</footer>
        
    </div>

    <!-- 引入 js 文件 -->
    <%- js('js/main.js') %>

</body>
</html>


